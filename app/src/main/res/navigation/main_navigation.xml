<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/teamsFragment"
        android:name="com.abdelrahman.football_league_kotlin.ui.destinations.teams.TeamsFragment"
        android:label="Premier League Teams"
        tools:layout="@layout/premier_league_fragment">
        <action
            android:id="@+id/action_teamsFragment_to_teamDetailsFragment"
            app:destination="@id/teamDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/teamDetailsFragment"
        android:name="com.abdelrahman.football_league_kotlin.ui.destinations.teamDetails.TeamDetailsFragment"
        android:label="TeamDetailsFragment"
        tools:layout="@layout/team_details">
        <argument
            android:name="teamId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.abdelrahman.football_league_kotlin.ui.destinations.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_teams"
            app:destination="@id/teamsFragment"
            />
    </fragment>
</navigation>